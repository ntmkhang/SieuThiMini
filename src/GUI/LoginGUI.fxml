<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="Controller.LoginController" style="-fx-background-color: #edf5ff;">
   <children>
      <!-- Chia màn hình làm 2 phần -->
      <HBox prefWidth="1280" prefHeight="680">

         <!-- Phần hình ảnh bên trái -->
         <Pane prefWidth="640" prefHeight="680" style="-fx-background-color: #ffffff;">
            <children>
               <ImageView fitWidth="640" fitHeight="680" layoutX="0" layoutY="0">
                  <image>
                     <Image url="file:C:/Users/vuhuy/Javaprojects/Javaprojects/Assets/Img/download.jpg"/>
                  </image>
               </ImageView>
            </children>
         </Pane>

         <!-- Phần form đăng nhập bên phải -->
         <Pane prefWidth="640" prefHeight="680" style="-fx-background-color: #ffffff; -fx-border-radius: 15px;">
            <children>
               <Label text="🔹 ĐĂNG NHẬP ADMIN 🔹" layoutX="160" layoutY="60" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
               <Label text="Tên đăng nhập" layoutX="160" layoutY="150" style="-fx-font-size: 16px; -fx-text-fill: #555;"/>
               <TextField fx:id="txtUsername" layoutX="160" layoutY="180" prefWidth="320" style="-fx-background-color: #f7f7f7; -fx-background-radius: 10px;"/>
               <Label text="Mật khẩu" layoutX="160" layoutY="250" style="-fx-font-size: 16px; -fx-text-fill: #555;"/>
               <PasswordField fx:id="txtPassword" layoutX="160" layoutY="280" prefWidth="320" style="-fx-background-color: #f7f7f7; -fx-background-radius: 10px;"/>
               <Button fx:id="btnLogin" text="🔑 Đăng nhập" layoutX="200" layoutY="350" prefWidth="140" style="-fx-background-color: #28a745; -fx-background-radius: 20px; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
               <Button fx:id="btnLogout" text="🚪 Đăng xuất" layoutX="360" layoutY="350" prefWidth="140" style="-fx-background-color: #dc3545; -fx-background-radius: 20px; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
            </children>
         </Pane>
      </HBox>
   </children>
</AnchorPane>
